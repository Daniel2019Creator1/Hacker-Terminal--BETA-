        <script>
function openChat(){
    document.getElementById("chatContainer").innerHTML = '<button onClick="javascript:closeChat();">Close Chatbox</button><div><iframe id="chatBox" src="http://pcm2cb.chatango.com" style="min-height:400px;max-height:600px;width:100%;"></iframe></div>'
            +'The official chat channel is pcm2cb<br/>'
            +'<input id="channelBox"/><br/>'
            +'<button onClick="javascript:changeChannel()">Change Chat Channel</button>';
}
function closeChat(){
    document.getElementById("chatContainer").innerHTML = '<button onClick="javascript:openChat();">Open Chatbox</button>';
}
function changeChannel(){
    var channel = channelBox.value;
    document.getElementById("chatBox").src = 'http://'+channel+'.chatango.com';
}
